{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lumina-note",
  "version": "0.4.4",
  "identifier": "com.luminanote.app",
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis",
      "msi",
      "dmg",
      "app"
    ],
    "resources": [
      "resources/node/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run bundle-node && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lumina Note",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob: asset: https://asset.localhost; img-src * data: blob: asset: https://asset.localhost; media-src * data: blob:; frame-src *; connect-src * data: blob:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA5RkEwQTZEQkY2MjA5RkQKUldUOUNXSy9iUXI2Q1I3OVdrQXpTRU90ZFN5SXMxUE4yaXB1emNzc3dOdzlwUEdNdHhtbTNWSlcK",
      "endpoints": [
        "https://github.com/blueberrycongee/Lumina-Note/releases/latest/download/latest.json"
      ]
    }
  }
}
